{
  "name": "reason-game-of-life",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://alanrsoares.github.io/reason-game-of-life",
  "scripts": {
    "start": "concurrently 'yarn re:watch' 'yarn start:web'",
    "start:web": "react-scripts start",
    "build": "yarn re:build && react-scripts build",
    "test": "jest",
    "eject": "react-scripts eject",
    "re:build": "bsb -make-world -clean-world",
    "re:watch": "bsb -make-world -clean-world -w",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.0",
    "@testing-library/user-event": "^12.1.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.3",
    "reason-react": "^0.9.1"
  },
  "devDependencies": {
    "@ahrefs/bs-emotion": "^2.0.0",
    "@davesnx/styled-ppx": "^0.20.0",
    "@glennsl/bs-jest": "^0.5.1",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "bs-platform": "^8.2.0",
    "concurrently": "^5.3.0",
    "gh-pages": "^3.1.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
